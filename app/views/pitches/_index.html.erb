<!-- Before votting header -->
<% if current_student.cohort.stage_id == 0 %>
  <h2>List of Project Pitches</h2>
  <% if current_student.cohort.pitch_limit > current_student.pitches.count %>
    <%= link_to("New Pitch", new_pitch_path) %> <br>
  <% end %>
<!-- votting header -->
<% elsif current_student.cohort.stage_id >= 1 %>
  <h2>Promoted Pitches</h2>
<% end %>


<!-- Changes just in round 0 -->
<% if current_student.cohort.stage_id == 0 %>
  <% if @student_pitches %>
    <% @student_pitches.each_with_index do |pitch, index| %>
    <%= link_to("#{ index + 1 }. #{pitch.name}", pitch_path(pitch.id))%> 
    <%=  link_to("edit", edit_pitch_path(pitch.id)) %> <%= link_to("delete", pitch_path(pitch.id) , method: "delete") %> 
    <br>
    <hr>
    <% end %>
  <% end %>
<% elsif current_student.cohort.stage_id > 0 %>
  <% if @current_pitches %>
   <% @current_pitches.each_with_index do |pitch, index| %>
      <%= link_to("#{ index + 1 }. #{pitch.name}", pitch_path(pitch.id))%><br> 
    <% end %>
  <% end %>
<% end %>
  


